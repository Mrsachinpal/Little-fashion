<%-include('../partials/header')%>
    <%-include('../partials/navbar')%>

        <class class="container mt-5  cart">
            <class class="container row">
                <div class="col-8 mt-5">
                    <div class="product-details ">
                        <div class="d-flex flex-row align-items-center mt-5"><i class="fa fa-long-arrow-left"></i><span
                                class="ml-2">Continue Shopping</span></div>
                        <hr>
                        <h6 class="mb-0">Shopping cart</h6>
                        <div class="d-flex justify-content-between"><span>You have <b><%=user.cart.length%></b> items in your cart</span>

                        </div>

                        <% for (let item of user.cart) { %>
                            <div class="d-flex justify-content-between align-items-center mt-3 p-2 items rounded">
                                <div class="d-flex flex-row">
                                    <img class="rounded" src="<%= item.Pimg %>" width="40">
                                    <div class="ml-2">
                                        <span class="font-weight-bold d-block"><%= item.Pname %></span>
                                        <span class="spec"><%= item.Pshortdesc %></span>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center">
                                    <!-- <span class="d-block">2</span> -->
                                    <span class="d-block ml-5 font-weight-bold">RS. <%= item.Pprice %></span>
                                    <form action="/user/cart/<%= item._id %>" method="POST">
                                        <button type="submit">                   <!--//    Delete Btn  -->
                                            <i class="fa fa-trash-o ml-3 text-black-50"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        <% } %>
                        
                    </div>
                </div>
                <div class="col-4  mt-5">
                   <div class="mt-5">
                    <div class="d-flex flex-row align-items-center mt-5"><span
                        class="ml-2">Total-bill</span></div>
                <hr>
                <div class="border m-2 text-center">
                   <section class="p-2">
                    Total Item:- <b><%=user.cart.length%></b>
                    </section>
                    <section class="p-2">
                
                    Total Bill:-<b><%=totalAmount%></b>
                    </section>
                   <section class="p-2">

                    <!-- <a href="/payment/<%=user._id%>"><button type="button" class="btn btn-primary">Proceed To checkout </button></a> -->

                    <a href="/payment/<%=user._id%>">
                        <button class="btn btn-primary">Proceed To checkout </button>
                    </a>
                    </section>
                   </section>
                </div>
                   </div>

                </div>
            </class>
        </class>


        <%-include('../partials/footer')%>